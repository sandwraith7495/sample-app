<% provide :title, t("log_in") %>
<h1><%= t "log_in" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |form| %>

      <%= form.label :email %>
      <%= form.email_field :email, class: 'form-control' %>

      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control' %>

      <%= form.submit t("log_in"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t "new_user" %> <%= link_to t("sign_up"), signup_path %></p>
  </div>
</div>
